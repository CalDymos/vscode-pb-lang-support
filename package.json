{
  "name": "vscode-pb-suite",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CalDymos/vscode-pb-lang-suite.git"
  },
  "scripts": {
    "w:core": "npm -w packages/pb-project-core",
    "w:lang": "npm -w packages/pb-lang-support",
    "w:forms": "npm -w packages/pb-forms-editor",
    "c:core": "npm -w packages/pb-project-core run build",
    "c:l": "npm run c:core && npm run -w packages/pb-lang-support compile",
    "c:f": "npm run -w packages/pb-forms-editor compile",
    "c": "npm run c:core && npm run c:l && npm run c:f",
    "vsix:l": "npm run c:core && npm -w packages/pb-lang-support run compile && npm -w packages/pb-lang-support run webpack:prod && cd packages/pb-lang-support && npx @vscode/vsce package --no-dependencies -o ../../pb-lang-support.vsix",
    "vsix:f": "npm -w packages/pb-forms-editor run compile && cd packages/pb-forms-editor && npx @vscode/vsce package --no-dependencies -o ../../pb-forms-editor.vsix",
    "vsix": "npm run vsix:l && npm run vsix:f",
    "v:patch": "npm version patch --no-git-tag-version",
    "v:patch:l": "npm version patch -w packages/pb-lang-support --no-git-tag-version",
    "v:patch:f": "npm version patch -w packages/pb-forms-editor --no-git-tag-version",
    "v:patch:c": "npm version patch -w packages/pb-project-core --no-git-tag-version",
    "v:minor": "npm version minor --no-git-tag-version",
    "v:minor:l": "npm version minor -w packages/pb-lang-support --no-git-tag-version",
    "v:minor:f": "npm version minor -w packages/pb-forms-editor --no-git-tag-version",
    "v:minor:c": "npm version minor -w packages/pb-project-core --no-git-tag-version",
    "t:all": "node scripts/tag-and-push.mjs all",
    "t:suite": "node scripts/tag-and-push.mjs suite",
    "t:forms": "node scripts/tag-and-push.mjs forms",
    "t:lang": "node scripts/tag-and-push.mjs lang",
    "backmerge": "node scripts/backmerge-main-into-devel.mjs"
  }
}
